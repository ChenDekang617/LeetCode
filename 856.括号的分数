class Solution:
    def scoreOfParentheses(self, S: str) -> int:
        left = 0
        i = 0
        res = 0
        while i < len(S):
            if S[i] == '(':
                left += 1
                i += 1
            else:
                score = 1
                left -= 1
                i += 1
                while i < len(S) and S[i] != '(':
                    left -= 1
                    i += 1
                    score *= 2
                res += score * 2**left # 核心，left的余数决定了嵌套的层数
        return res
